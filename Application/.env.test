# HelixTrack Core - Testing Configuration

# Database (will be overridden by test infrastructure)
DB_TYPE=sqlite
DB_PATH=/app/Database/test.db

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Logging
LOG_LEVEL=debug
LOG_OUTPUT=stdout
LOG_FORMAT=console

# Service Discovery
HEALTH_CHECK_INTERVAL=5s
HEALTH_CHECK_TIMEOUT=2s
HEALTH_FAILURE_THRESHOLD=2
FAILOVER_ENABLED=true
FAILOVER_STABILITY_COUNT=2
FAILBACK_DELAY=10s

# Security (relaxed for testing)
ADMIN_TOKEN_MIN_LENGTH=32
SERVICE_ROTATION_MIN_AGE=1s

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Environment
ENVIRONMENT=test
DEBUG=true
TEST_MODE=true
SEED_TEST_DATA=true

# Fast timeouts for testing
SERVER_READ_TIMEOUT=5s
SERVER_WRITE_TIMEOUT=5s
SERVER_IDLE_TIMEOUT=10s
SERVER_SHUTDOWN_TIMEOUT=5s
