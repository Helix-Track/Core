# HelixTrack Core - SQLite Configuration

# Database
DB_TYPE=sqlite
DB_PATH=/app/Database/helixtrack.db

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Logging
LOG_LEVEL=info
LOG_OUTPUT=both
LOG_PATH=/app/logs
LOG_FORMAT=json

# Service Discovery
HEALTH_CHECK_INTERVAL=60s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_FAILURE_THRESHOLD=3
FAILOVER_ENABLED=true
FAILOVER_STABILITY_COUNT=3
FAILBACK_DELAY=5m

# Security
ADMIN_TOKEN_MIN_LENGTH=32
SERVICE_ROTATION_MIN_AGE=5m

# Metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Environment
ENVIRONMENT=development
DEBUG=false
